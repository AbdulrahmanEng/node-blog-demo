<%- include('../partials/header'); %>
<h1>
  <%= pageTitle %>
</h1>
<form action="/posts/<%= id %>" method="post">
  <div>
    <label for="title">Title</label><br/>
    <input type="text" name="title" placeholder="New Title" value="<%= title %>"/>
  </div>
  <div>
    <label for="body">Body</label><br/>
    <textarea name="body" style="margin: 0px;width: 500px;height: 150px; font-family:sans-serif"><%= body %></textarea>
  </div>
  <div>
    <button>Save</button>
  </div>
</form>
  <div>
      <form action="/posts/<%= id %>?_method=DELETE" method="post">
          <div>
              <button>Delete</button>
          </div>
      </form>
  </div>
  <a href="/posts">Back</a>
<%- include('../partials/footer'); %>